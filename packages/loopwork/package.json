{
  "name": "@loopwork-ai/loopwork",
  "version": "0.3.6",
  "description": "Loopwork - AI task runner with pluggable backends",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./contracts": "./src/contracts/index.ts",
    "./backends": "./src/backends/index.ts"
  },
  "bin": {
    "loopwork": "bin/loopwork"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "CHANGELOG.md",
    "SECURITY.md",
    ".env.example",
    "examples/"
  ],
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "echo 'Skipping build due to Ink top-level await incompatibility with bun build'",
    "build:dist": "bun build ./src/index.ts --outdir dist --target node --external bun",
    "build:binary": "bun build ./src/index.ts --compile --outfile bin/loopwork",
    "test": "bun test --no-parallel",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "setup-labels": "bun run src/setup-labels.ts",
    "posts:generate": "bun run scripts/generate-posts.ts",
    "posts:schedule": "bun run scripts/schedule-linkedin-posts.ts",
    "posts:preview": "bun run scripts/generate-posts.ts markdown",
    "prepack": "bun run build",
    "pack:dry": "npm pack --dry-run",
    "pack:check": "npm pack && tar -tzf *.tgz && rm *.tgz",
    "prepublishOnly": "bun run build && bun run test",
    "security:trivy": "trivy fs . --severity CRITICAL,HIGH,MEDIUM || echo 'Trivy not installed. Run: brew install aquasecurity/trivy/trivy'",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@loopwork-ai/agents": "workspace:*",
    "@loopwork-ai/ai-monitor": "workspace:*",
    "@loopwork-ai/checkpoint": "workspace:*",
    "@loopwork-ai/common": "workspace:*",
    "@loopwork-ai/contracts": "workspace:*",
    "@loopwork-ai/executor": "workspace:*",
    "@loopwork-ai/result-parser": "workspace:*",
    "@loopwork-ai/state": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "handlebars": "^4.7.8",
    "ink": "^4.4.1",
    "ink-testing-library": "^3.0.0",
    "ora": "8.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "keywords": [
    "ai",
    "automation",
    "task-runner",
    "github",
    "workflow",
    "cli",
    "loopwork",
    "agent"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nadimtuhin/loopwork.git"
  },
  "bugs": {
    "url": "https://github.com/nadimtuhin/loopwork/issues"
  },
  "homepage": "https://github.com/nadimtuhin/loopwork#readme",
  "author": "Nadim Tuhin",
  "license": "MIT"
}
