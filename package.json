{
  "name": "loopwork-monorepo",
  "packageManager": "bun@1.1.24",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/dashboard/web"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check:circular": "madge --circular --extensions ts packages/*/src",
    "dev:loopwork": "turbo run dev --filter loopwork",
    "dev:dashboard": "turbo run dev --filter @loopwork-ai/dashboard",
    "dev:web": "turbo run dev --filter @loopwork-ai/dashboard-web",
    "publish:all": "bun run build && bun run --filter './packages/*' publish",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run check:circular && bunx lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.7.6",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "node-pty": "^1.1.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.211.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.211.0",
    "@opentelemetry/metrics": "^0.24.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "@opentelemetry/tracing": "^0.24.0",
    "events": "^3.3.0",
    "ink-testing-library": "^4.0.0"
  }
}
